<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:text="Allowance Tracker"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Monthly Allowance -->
        <EditText
            android:id="@+id/etMonthlyAllowance"
            android:hint="Monthly Allowance (₹)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Save / Edit Allowance -->

        <Button
            android:id="@+id/btnSaveAllowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Monthly Allowance" />

        <!-- Daily Allowance -->
        <Button
            android:id="@+id/btnEditAllowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Monthly Allowance" />

        <TextView
            android:id="@+id/tvDailyAllowance"
            android:text="Daily Allowance: ₹0"
            android:paddingTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Balance -->
        <TextView
            android:id="@+id/tvBalance"
            android:text="Balance: ₹0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingVertical="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Add Daily Allowance -->
        <Button
            android:id="@+id/btnAddDaily"
            android:text="Add Daily Allowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Spend / Add -->
        <EditText
            android:id="@+id/etAmount"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etDescription"
            android:hint="Description (Optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSpend"
            android:text="Spend Money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAddExtra"
            android:text="Add Extra Money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Reset & Logs -->

        <Button
            android:id="@+id/btnResetBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Balance" />

        <Button
            android:id="@+id/btnLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Logs" />

    </LinearLayout>
</ScrollView>
